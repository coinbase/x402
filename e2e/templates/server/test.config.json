{
  "name": "<server-name>",
  "type": "server",
  "language": "<go/python/typescript>",
  "x402Version": "<1/2>",
  "extensions": [
    "<extension-name-1>",
    "<extension-name-2>"
  ],
  "description": "<server-description>",
  "endpoints": [
    {
      "path": "/protected",
      "method": "<GET/POST/PATCH/DELETE/OPTIONS/HEAD>",
      "description": "<endpoint-description>",
      "requiresPayment": true,
      "protocolFamily": "<evm/svm>",
      "transferMethod": "<eip3009/permit2> (EVM only)"
    },
    {
      "path": "/health",
      "method": "GET",
      "description": "Health check endpoint",
      "health": true
    },
    {
      "path": "/close",
      "method": "POST",
      "description": "Graceful shutdown endpoint",
      "close": true
    }
  ],
  "environment": {
    "required": [
      "PORT",
      "EVM_PAYEE_ADDRESS",
      "SVM_PAYEE_ADDRESS",
      "FACILITATOR_URL"
    ],
    "optional": []
  }
}