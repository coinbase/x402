{
  "name": "gin",
  "type": "server",
  "language": "go",
  "x402Version": 2,
  "extensions": [
    "bazaar",
    "eip2612GasSponsoring"
  ],
  "description": "Go Gin server with x402 v2 payment middleware",
  "endpoints": [
    {
      "path": "/protected",
      "method": "GET",
      "description": "Protected endpoint requiring EIP-3009 payment",
      "requiresPayment": true,
      "protocolFamily": "evm",
      "transferMethod": "eip3009"
    },
    {
      "path": "/protected-permit2",
      "method": "GET",
      "description": "Protected endpoint requiring Permit2 payment",
      "requiresPayment": true,
      "protocolFamily": "evm",
      "transferMethod": "permit2"
    },
    {
      "path": "/protected-svm",
      "method": "GET",
      "description": "Protected endpoint requiring payment (SVM)",
      "requiresPayment": true,
      "protocolFamily": "svm"
    },
    {
      "path": "/health",
      "method": "GET",
      "description": "Health check endpoint",
      "health": true
    },
    {
      "path": "/close",
      "method": "POST",
      "description": "Graceful shutdown endpoint",
      "close": true
    }
  ],
  "environment": {
    "required": [
      "PORT",
      "EVM_PAYEE_ADDRESS",
      "SVM_PAYEE_ADDRESS",
      "FACILITATOR_URL"
    ],
    "optional": []
  }
}